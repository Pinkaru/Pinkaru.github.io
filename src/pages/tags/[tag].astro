---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { sortByDate, formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

  return allTags.map(tag => ({
    params: { tag },
    props: {
      posts: allPosts.filter(post => post.data.tags?.includes(tag)).sort(sortByDate)
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={`Tag: ${tag}`}>
  <div class="space-y-6">
    <div class="card">
      <h1 class="text-4xl font-bold text-primary">
        Posts tagged with <span class="text-secondary">#{tag}</span>
      </h1>
      <p class="text-gray-600 mt-2">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</p>
    </div>

    {posts.map(post => (
      <article class="card">
        <div class="flex items-baseline justify-between mb-2">
          <time class="text-sm text-gray-600">{formatDate(post.data.date)}</time>
        </div>
        <h2 class="text-2xl font-bold mb-3">
          <a href={`/blog/${post.slug}`} class="text-primary hover:text-secondary transition-colors">
            {post.data.title}
          </a>
        </h2>
        <p class="text-gray-700 mb-4">
          {post.data.description || post.body.substring(0, 150) + '...'}
        </p>
        {post.data.tags && post.data.tags.length > 1 && (
          <div class="flex gap-2">
            {post.data.tags.map((t: string) => (
              <a
                href={`/tags/${t}`}
                class="bg-gray-200 hover:bg-secondary hover:text-white px-2 py-1 rounded text-xs transition-colors"
              >
                #{t}
              </a>
            ))}
          </div>
        )}
      </article>
    ))}
  </div>
</BaseLayout>
