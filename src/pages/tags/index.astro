---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();
const tagCounts = allTags.map(tag => ({
  tag,
  count: allPosts.filter(post => post.data.tags?.includes(tag)).length
}));
---

<BaseLayout title="Tags">
  <div class="card">
    <h1 class="text-4xl font-bold text-primary mb-8">All Tags</h1>

    <div class="flex flex-wrap gap-3">
      {tagCounts.map(({ tag, count }) => (
        <a
          href={`/tags/${tag}`}
          class="bg-gray-200 hover:bg-secondary hover:text-white px-4 py-2 rounded-lg transition-colors font-medium"
        >
          #{tag} <span class="text-sm">({count})</span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
