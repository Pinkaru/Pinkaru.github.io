---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { sortByDate, formatDate } from '../../utils/date';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(sortByDate);
---

<BaseLayout title="Blog Archive">
  <div class="space-y-6">
    <h1 class="text-4xl font-bold text-primary mb-8">All Posts</h1>

    {sortedPosts.map(post => (
      <article class="card">
        <div class="flex items-baseline justify-between mb-2">
          <time class="text-sm text-gray-600">{formatDate(post.data.date)}</time>
        </div>
        <h2 class="text-2xl font-bold mb-3">
          <a href={`/blog/${post.slug}`} class="text-primary hover:text-secondary transition-colors">
            {post.data.title}
          </a>
        </h2>
        <p class="text-gray-700 mb-4">
          {post.data.description || post.body.substring(0, 150) + '...'}
        </p>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex gap-2">
            {post.data.tags.map((tag: string) => (
              <a
                href={`/tags/${tag}`}
                class="bg-gray-200 hover:bg-secondary hover:text-white px-2 py-1 rounded text-xs transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </article>
    ))}
  </div>
</BaseLayout>
