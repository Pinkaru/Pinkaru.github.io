---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { sortByDate, formatDate } from '../utils/date';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(sortByDate);
const postsPerPage = 5;
const displayPosts = sortedPosts.slice(0, postsPerPage);
---

<BaseLayout>
  <div class="space-y-8">
    <h2 class="text-3xl font-bold text-primary">Well, Hello There!</h2>

    {displayPosts.map(post => (
      <article class="card">
        <div class="flex items-baseline justify-between mb-2">
          <time class="text-sm text-gray-600">{formatDate(post.data.date)}</time>
        </div>
        <h3 class="text-2xl font-bold mb-3">
          <a href={`/blog/${post.slug}`} class="text-primary hover:text-secondary transition-colors">
            {post.data.title}
          </a>
        </h3>
        <p class="text-gray-700 mb-4">
          {post.data.description || post.body.substring(0, 150) + '...'}
        </p>
        <a
          href={`/blog/${post.slug}`}
          class="text-secondary hover:underline font-medium"
        >
          Read more! â†’
        </a>
      </article>
    ))}

    {sortedPosts.length > postsPerPage && (
      <div class="text-center">
        <a href="/blog" class="btn btn-primary">
          View All Posts
        </a>
      </div>
    )}
  </div>
</BaseLayout>
